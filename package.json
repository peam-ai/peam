{
  "name": "peam-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:watch": "turbo watch build",
    "prettier": "prettier --write packages",
    "clean": "turbo run clean",
    "test": "run-p test:*",
    "test:eslint": "turbo run test:eslint",
    "test:prettier": "turbo run test:prettier",
    "test:jest": "turbo run test:jest -- --passWithNoTests",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "publish-packages": "turbo run build test && changeset version && changeset publish"
  },
  "packageManager": "pnpm@10.28.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peam-ai/peam.git"
  },
  "author": "Afshin Mehrabani",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/peam-ai/peam/issues"
  },
  "homepage": "https://github.com/peam-ai/peam#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.50.0"
  }
}
