{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "examples/**/.peam/**"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "clean": {
      "cache": false
    },
    "test:lint": {
      "cache": false
    },
    "test:unit": {
      "cache": false
    },
    "test:format": {
      "cache": false
    },
    "format": {
      "cache": false
    }
  }
}
