---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About Us - Astro + React Example';
const description = 'Learn more about our Astro + React example application';
---

<BaseLayout title={title} description={description}>
  <main class="container">
    <section>
      <h1>About Us</h1>
      <article>
        <h2>Our Mission</h2>
        <p>
          We're dedicated to creating simple, efficient, and powerful examples
          that help developers understand how to integrate Peam with their
          Astro applications.
        </p>
        <p>
          This example showcases Astro with React with a clean, classless theme,
          all integrated with Peam's powerful functionality.
        </p>
      </article>
    </section>
    <section>
      <article>
        <h2>What We Offer</h2>
        <p>Clean and maintainable code examples</p>
        <p>Modern development practices</p>
        <p>Easy-to-understand implementations</p>
        <p>Full TypeScript support</p>
      </article>
    </section>
  </main>
</BaseLayout>
