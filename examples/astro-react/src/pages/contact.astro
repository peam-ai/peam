---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Contact Us - Astro + React Example';
const description = 'Get in touch with us';
---

<BaseLayout title={title} description={description}>
  <main class="container">
    <section>
      <h1>Contact Us</h1>
      <article>
        <p>Have questions about Peam or this example? We'd love to hear from you!</p>
        <form>
          <label for="name">
            Name
            <input type="text" id="name" name="name" placeholder="Your name" />
          </label>
          <label for="email">
            Email
            <input type="email" id="email" name="email" placeholder="your.email@example.com" />
          </label>
          <label for="message">
            Message
            <textarea id="message" name="message" rows="6" placeholder="Your message..."></textarea>
          </label>
          <button type="submit">Send Message</button>
        </form>
      </article>
    </section>
  </main>
</BaseLayout>
