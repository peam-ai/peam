{
  "name": "@peam-ai/search",
  "version": "0.1.4",
  "description": "Vector database and search functionality for Peam",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "homepage": "https://peam.ai",
  "author": "Afshin Mehrabani",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/peam-ai/peam.git",
    "directory": "packages/search"
  },
  "bugs": {
    "url": "https://github.com/peam-ai/peam/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prettier": "prettier --write \"src/**/*.ts*\"",
    "test:lint": "eslint \"src/**/*.ts*\"",
    "test:prettier": "prettier --check \"src/**/*.ts*\"",
    "test:unit": "vitest run"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "@peam-ai/logger": "workspace:*",
    "@peam-ai/parser": "workspace:*",
    "flexsearch": "^0.8.212"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
