{
  "name": "peam",
  "version": "0.1.4",
  "description": "Peam - AI that knows your website.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "peam": "./dist/cli.js"
  },
  "scripts": {
    "gen:schemas": "ts-to-zod --all --skipValidation",
    "prebuild": "pnpm gen:schemas",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts*\"",
    "test:lint": "eslint \"src/**/*.ts*\"",
    "test:format": "prettier --check \"src/**/*.ts*\"",
    "test:unit": "vitest run"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "chat",
    "ui"
  ],
  "author": "Afshin Mehrabani",
  "license": "Apache-2.0",
  "homepage": "https://peam.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/peam-ai/peam.git",
    "directory": "packages/peam"
  },
  "bugs": {
    "url": "https://github.com/peam-ai/peam/issues"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.mjs",
      "require": "./dist/logger.js"
    },
    "./search": {
      "types": "./dist/search.d.ts",
      "import": "./dist/search.mjs",
      "require": "./dist/search.js"
    },
    "./builder": {
      "types": "./dist/builder.d.ts",
      "import": "./dist/builder.mjs",
      "require": "./dist/builder.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "dependencies": {
    "@peam-ai/builder": "workspace:*",
    "@peam-ai/client": "workspace:*",
    "@peam-ai/logger": "workspace:*",
    "@peam-ai/parser": "workspace:*",
    "@peam-ai/search": "workspace:*",
    "@peam-ai/server": "workspace:*",
    "chalk": "^4.1.2",
    "fast-glob": "^3.3.3",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.35",
    "ts-to-zod": "^5.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
