{
  "name": "peam",
  "version": "0.1.0",
  "description": "Peam - AI that knows your website.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "peam": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "test:eslint": "eslint \"src/**/*.ts*\"",
    "test:prettier": "prettier --check \"src/**/*.ts*\"",
    "test:jest": "jest",
    "test": "run-p test:*"
  },
  "keywords": [
    "static-site",
    "ssg",
    "nextjs",
    "hugo",
    "jekyll",
    "gatsby",
    "search",
    "indexer",
    "ai",
    "cli",
    "peam"
  ],
  "author": "Afshin Mehrabani",
  "license": "Apache-2.0",
  "homepage": "https://peam.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/peam-ai/peam.git",
    "directory": "packages/peam"
  },
  "bugs": {
    "url": "https://github.com/peam-ai/peam/issues"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@peam/parser": "*",
    "@peam/search": "*",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@peam/tsconfig": "*",
    "@types/node": "^20.0.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
