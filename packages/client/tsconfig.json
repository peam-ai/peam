{
  "extends": "../tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@/ask-ai/*": ["./components/ask-ai/*"],
      "react": ["./node_modules/@types/react"],
      "react-dom": ["./node_modules/@types/react-dom"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
