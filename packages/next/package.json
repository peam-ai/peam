{
  "name": "@peam-ai/next",
  "description": "Peam Next.js integration",
  "version": "0.1.7",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "homepage": "https://peam.ai",
  "author": "Afshin Mehrabani",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/peam-ai/peam.git",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/peam-ai/peam/issues"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts*\"",
    "test:lint": "eslint \"src/**/*.ts*\"",
    "test:format": "prettier --check \"src/**/*.ts*\"",
    "test:unit": "vitest run"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./route": {
      "types": "./dist/route.d.ts",
      "import": "./dist/route.mjs",
      "require": "./dist/route.js"
    },
    "./peam.adapter.js": "./dist/peam.adapter.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.9.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.50.0",
    "next": ">=14.0.0"
  },
  "dependencies": {
    "peam": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=14.0.0"
  }
}
